{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h1>Votre Panier</h1>

		{% if items | length > 0%}
			<table>
				<thead>
					<tr>
						<th>Produit</th>
						<th>Prix</th>
						<th>Quantit√©</th>
						<th>Total</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>
								{{ item.product.title }}</td>
							<td>
								{{ item.product.price }}</td>
							<td>
								{{ item.quantity }}</td>
							<td></td>
							<td>
								{% for location in  item.product.origin %}

									{{ location }}
                                    </td>
							{% endfor %}
							<td>
								{{ item.product.price * item.quantity }}</td>
							<td>
								<a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
									Supprimer
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3" class="text-right">Total :</td>
						<td>{{total}}</td>
						<td></td>
					</tr>

				</tfoot>
				{% else %}
			{% endif %}
		</div>
	{% endblock %}
