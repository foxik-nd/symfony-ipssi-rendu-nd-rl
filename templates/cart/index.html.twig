{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h1>Votre Panier</h1>

		{% if items | length > 0%}
			<table>
				<thead>
					<tr>
						<th class='mx-10'>Produit   </th>
						<th class='mx-10'>Prix     </th>
						<th>Quantité   €</th>
						<th>Provenances </th>
						<th>Total   </th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>
								{{ item.product.title }}       </td>
							<td>
								{{ item.product.price }}       </td>
							<td>
								{{ item.quantity }}        </td>
							<td>
							{{ item.product.origin ? item.product.origin|join(', ') : '' }}
                                    </td>
							<td>
								{{ item.product.price * item.quantity }}</td>
							<td>
								<a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
									Supprimer
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="2" class="text-right">Total :</td>
						<td>{{total}} €</td>
						<td></td>
					</tr>

				</tfoot>
				{% else %}
			{% endif %}
		</div>
	{% endblock %}
